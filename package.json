    "msw": "^2.11.5",
    "prettier": "^3.6.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.46.0",
    "vite": "7.1.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "ai-agent",
    "ai-integration",
    "automation",
    "branch",
    "cherry-pick",
    "clone",
    "commit",
