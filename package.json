    "@eslint/js": "^9.37.0",
    "@types/bun": "^1.3.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.7.2",
    "@types/node-cron": "^3.0.11",
    "@types/papaparse": "^5.3.16",
    "@types/sanitize-html": "^2.16.0",
    "@types/validator": "13.15.3",
    "@vitest/coverage-v8": "3.2.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bun-types": "^1.3.0",
    "clipboardy": "^5.0.0",
